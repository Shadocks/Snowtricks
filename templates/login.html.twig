{% extends 'base.html.twig' %}
{% block body %}

    <div class="container">
        <h3 class="title-login">Se connecter</h3>
        <div class="container form">
        {% if error %}
            <div>{{ error.message.key|trans(error.messageData, 'security') }}</div>
        {% endif %}
            <form action="{{ path('login') }}" method="post" class="form-horizontal">

                <div class="form-group">
                    <div class="col-xs-12">
                    <label for="username" class="col-sm-2 control-label">Username</label>
                        <div class="col-sm-10">
                            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        <label for="password" class="col-sm-2 control-label">Password</label>
                        <div class="col-sm-10">
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="btn-login">
                    <button type="submit" class="btn btn-primary">login</button>
                </div>
            </form>
            <div class="link-already-account">
                <a href="/forgot/password">Mot de passe oubli√© ?</a>
            </div>
        </div>
    </div>

{% endblock %}