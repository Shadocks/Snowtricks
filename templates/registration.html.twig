{% extends 'base.html.twig' %}

{% block body %}

    <!-------------------------- FORM TO REGISTRATION ------------------------->

    <div class="container">
        <h3 class="title-registration">Créer un compte</h3>
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                {{ form_errors(form) }}
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.username, 'Nom d\'utilisateur', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.username) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control'}}) }}
                    </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.mail, 'Mail', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.mail) }}
                <div class="col-sm-10">
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.plainPassword, 'Mot de passe', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                {{ form_errors(form.plainPassword) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.picture.file, 'Photo de profil', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                    {{ form_errors(form.picture.file) }}
                <div class="col-sm-10">
                    {{ form_widget(form.picture.file, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="btn-create-account">
            <button type="submit" class="btn btn-primary">Créer</button>
        </div>
            {{ form_end(form) }}
    </div>

    <!----------------------------- LINK TO LOGIN ----------------------------->

    <div class="link-already-account">
        <a href="/login">Déjà un compte ?</a>
    </div>

{% endblock %}