{% extends 'base.html.twig' %}

{% block body %}

    <!----------------------- FORM RESET PASSWORD ------------------------>

    <div class="container">
        <h3 class="title-forgotPassword">Changer votre mot de passe</h3>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.mail, 'Mail', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.password, 'Password', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>

        <div class="btn-reset">
            <button href="#" class="btn btn-primary">RÃ©initialiser</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}