{% extends 'base.html.twig' %}

{% block body %}
    <div class="container resetPasswordPage">
        <div>
            {% for message in app.flashes('success') %}
                <div class="flash-success">
                    <div class="alert alert-success alert-dismissible fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div>
            {% for message in app.flashes('failure') %}
                <div class="flash-failure">
                    <div class="alert alert-warning alert-dismissible fade in">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <strong>{{ message }}</strong>
                    </div>
                </div>
            {% endfor %}
        </div>
        <h3 class="title-forgotPassword">Changer votre mot de passe</h3>
        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.mail, 'Mail', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-12">
                {{ form_label(form.plainPassword, 'Password', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                <div class="col-sm-10">
                    {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
        </div>
        <div class="btn-reset">
            <button type="submit" href="#" class="btn btn-primary">RÃ©initialiser</button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}