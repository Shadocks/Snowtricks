{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <h2>Ajouter un trick</h2>
        <div class="container form">
            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_label(form.name, 'Nom', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_label(form.category, 'Catégorie', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                            <div class="col-sm-10">
                                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
                            </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_label(form.picture, 'Images', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                            {{ form_errors(form.picture) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.picture) }}
                            <a href="#" id="add_picture" class="btn btn-primary btn-xs">Ajouter une image</a>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-xs-12">
                        {{ form_label(form.video, 'Video', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
                            {{ form_errors(form.video) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.video) }}
                            <a href="#" id="add_video" class="btn btn-primary btn-xs">Ajouter une vidéo</a>
                        </div>
                    </div>
                </div>

                <div class="btn-add-trick">
                    <button type="submit" class="btn btn-primary">Créer</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="/js/addTrick.js" type="text/javascript"></script>
{% endblock %}
